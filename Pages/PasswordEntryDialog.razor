<MudDialog Style="width: 80vw !important;">
    <DialogContent>
        <MudText Typo="Typo.body1">Password details.</MudText>
        <MudTextField Label="Name" @bind-Value="@Entry.Name" />
        <MudTextField Label="Username" @bind-Value="@Entry.Username" />
        <MudTextField Label="Password" @bind-Value="@Entry.Password" />
        <MudTextField Label="Url" @bind-Value="@Entry.Url" />
        <MudTextField Label="Note" @bind-Value="@Entry.Note" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    #pragma warning disable 8618
    public MudDialogInstance MudDialog { get; set; }
    [Parameter]
    public PasswordEntry Entry { get; set; }
    private PasswordEntry _localEntry;
    #pragma warning restore 8618

    protected override void OnParametersSet()
    {
        _localEntry = new PasswordEntry(Entry);
    }

    private void Submit()
    {
        // TODO 
        // save the entry to the database!

        // await PasswordService.UpdatePasswordEntryAsync(_localEntry);
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Cancel();
}
