<MudDialog Style="width: 80vw !important;">
    <DialogContent>
        <MudText Typo="Typo.body1">Password details.</MudText>
        <MudTextField Label="Name" @bind-Value="@_localEntry.Name" />
        <MudTextField Label="Username" @bind-Value="@_localEntry.Username" />
        <MudTextField Label="Password" @bind-Value="@_localEntry.Password" />
        <MudTextField Label="Url" @bind-Value="@_localEntry.Url" />
        <MudTextField Label="Note" @bind-Value="@_localEntry.Note" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
